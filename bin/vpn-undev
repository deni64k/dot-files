#!/bin/sh

if pgrep vpnc >/dev/null 2>&1; then
  sudo vpnc-disconnect
  sleep 2
fi

exec sudo sh <<EOF
set -e

vpnc ${HOME}/.vpn-undev
for ip in 192.168.216.1 192.168.215.1; do
  if ! grep -q "nameserver \${ip}" /etc/resolv.conf; then
    sed "1 i nameserver \${ip}" /etc/resolv.conf -i
  fi
done
EOF
